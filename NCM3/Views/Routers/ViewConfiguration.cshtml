@model NCM3.Models.RouterConfiguration

@{
    ViewData["Title"] = "View Configuration";
}

<div class="container-fluid">
    <h1>Router Configuration</h1>
    <h4>@Model.Router?.Hostname (@Model.Router?.IpAddress)</h4>
    <h5>Backup: @Model.Version - @Model.BackupDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</h5>
    
    <div class="row mb-3">
        <div class="col">
            <div class="btn-group" role="group">
                <a asp-action="ConfigurationHistory" asp-route-id="@Model.RouterId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to History
                </a>
                <a asp-action="BackupConfiguration" asp-route-id="@Model.RouterId" class="btn btn-primary">
                    <i class="bi bi-download"></i> Create New Backup
                </a>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5>Configuration Content</h5>
                <small class="text-muted">Backed up by: @Model.BackupBy</small>
            </div>
        </div>
        <div class="card-body">
            <div class="bg-dark p-3 rounded">
                <pre class="text-light" style="white-space: pre-wrap; font-family: 'Courier New', Courier, monospace;">@Model.Content</pre>
            </div>
        </div>
    </div>
</div>