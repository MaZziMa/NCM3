@model NCM3.Models.Router

@{
    ViewData["Title"] = "Delete Router";
}

<div class="container-fluid">
    <h1>Delete Router</h1>
    
    <div class="alert alert-danger mb-4">
        <h4><i class="bi bi-exclamation-triangle"></i> Warning</h4>
        <p>Are you sure you want to delete this router? This action cannot be undone.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5>Router Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Hostname)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Hostname)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IpAddress)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IpAddress)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
                <dd class="col-sm-9">
                    @if (string.IsNullOrEmpty(Model.Model))
                    {
                        <span class="text-muted">Not available</span>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.Model)
                    }
                </dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OSVersion)</dt>
                <dd class="col-sm-9">
                    @if (string.IsNullOrEmpty(Model.OSVersion))
                    {
                        <span class="text-muted">Not available</span>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.OSVersion)
                    }
                </dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div> 